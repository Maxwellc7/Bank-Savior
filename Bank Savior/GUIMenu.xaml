        <Label Content="" HorizontalAlignment="Left" Margin="75,35,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="40" Height="56" Width="10"/>
        <Label Content="Menu" HorizontalAlignment="Left" Margin="66,14,0,0" VerticalAlignment="Top" Foreground="#FFF85C42" FontFamily="Shrikhand" FontSize="70" Height="112" Width="220" Grid.ColumnSpan="2"/>
