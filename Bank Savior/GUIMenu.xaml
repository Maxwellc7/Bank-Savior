        xmlns:local="clr-namespace:Bank_Savior"
        mc:Ignorable="d"
        Title="GUIMenu" Height="450" Width="800" Background="Transparent" MinWidth="800" MinHeight="450" MaxWidth="800" MaxHeight="450" WindowStartupLocation="CenterScreen">
