<Window x:Class="Bank_Savior.GUI_PuntoEquilibrio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_Savior"
        mc:Ignorable="d"
        Title="GUI_PuntoEquilibrio" Height="485" Width="800" Background="#FF191717" MinWidth="800" MinHeight="485" MaxWidth="800" MaxHeight="485" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnMenuPrincipal" Content="Menú Principal" HorizontalAlignment="Left" Margin="650,370,0,0" VerticalAlignment="Top" Height="38" Width="109" Click="btnMenuPrincipal_Click" Background="Transparent" BorderBrush="#eee" Opacity="0.9" Foreground="#eee"/>
        <Label x:Name="lblPuntoEquilibrio" Content="Punto de Equilibrio&#xD;&#xA;" HorizontalAlignment="Left" Margin="66,14,0,0" VerticalAlignment="Top" Foreground="#FFF85C42" FontFamily="Shrikhand" FontSize="40" Height="58" Width="425"/>
        <Label x:Name="lblCostosFijos" Content="Costos Fijos Totales" HorizontalAlignment="Left" Margin="66,125,0,0" VerticalAlignment="Top" Width="140" Foreground="White"/>
        <Label x:Name="lblCostoVariable" Content="Costos Variables Totales" HorizontalAlignment="Left" Margin="66,170,0,0" VerticalAlignment="Top" Width="154" Foreground="White"/>
        <Label x:Name="lblPrecioVenta" Content="Ventas Totales" HorizontalAlignment="Left" Margin="66,217,0,0" VerticalAlignment="Top" Width="140" Foreground="White" Height="30"/>
        <TextBox x:Name="txtCostosFijos" HorizontalAlignment="Left" Margin="250,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtCostosFijos_TextChanged"/>
        <TextBox x:Name="txtCostosVariables" HorizontalAlignment="Left" Margin="250,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtCostosVariables_TextChanged"/>
        <TextBox x:Name="txtPrecioVenta" HorizontalAlignment="Left" Margin="250,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtPrecioVenta_TextChanged"/>
        <Label x:Name="lblResultado" Content="EL PEQ ES IGUAL A XXXXXX" HorizontalAlignment="Left" Margin="66,275,0,0" VerticalAlignment="Top" Width="299" Foreground="White" Height="43" FontSize="20"/>
        <Button x:Name="btnCalcular" Content="Calcular" HorizontalAlignment="Left" Margin="103,338,0,0" VerticalAlignment="Top" Height="30" Width="112" FontSize="15" FontWeight="Bold" Click="btnCalcular_Click"/>
        <Button x:Name="btnBorrar" Content="Borrar" HorizontalAlignment="Left" Margin="227,338,0,0" VerticalAlignment="Top" Height="30" Width="112" FontSize="15" FontWeight="Bold" Click="btnBorrar_Click"/>
        <Image HorizontalAlignment="Left" Height="218" Margin="482,106,0,0" VerticalAlignment="Top" Width="244" Source="/icompuesto.png"/>
        <Label x:Name="lblCostosFijosWarning" Content="" HorizontalAlignment="Left" Margin="376,125,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.877,0.489" Foreground="Red" Width="124"/>
        <Label x:Name="lblCostosVariablesWarning" Content="" HorizontalAlignment="Left" Margin="376,170,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.877,0.489" Foreground="Red" Width="106"/>
        <Label x:Name="lblCostosPrecioVentaWarning" Content="" HorizontalAlignment="Left" Margin="376,217,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.877,0.489" Foreground="Red" Width="124"/>

    </Grid>
</Window>
